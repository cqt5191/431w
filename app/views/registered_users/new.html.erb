<%= content_for :body  do %>
	<div class="container">
		<h1>Register</h1>
		<div>
	  		<div>
		    	<%= form_for(@user) do |f| %>
		    		<%= f.label :username %>
		    		<br/>
		     		<%= f.text_field :username %>
		     		<br/>
			    	<%= f.label :password %>
			    	<br/>
		    		<%= f.password_field :password %>
		    		<br/>
		    		<%= f.label :password_confirmation, "Password Confirmation" %>
		    		<br/>
	      			<%= f.password_field :password_confirmation %>
	      			<br/>
		    		<%= f.submit "Create my account", class: "btn btn-primary" %>
		    	<% end %>
	  		</div>
		</div>
	</div>
<% end %>
