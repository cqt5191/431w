<%= content_for :body  do %>
	<div class="container">
		<h1>Customer Info</h1>
		<div class="row">
	  		<div class="col-md-6 col-md-offset-3">
		    	<%= form_for(@customer) do |f| %>
		    		<%= f.label :email %>
		    		<br/>
		     		<%= f.email_field :email %>
		     		<br/>
			    	<%= f.label :shipping_address %>
			    	<br/>
		    		<%= f.text_field :shipping_address %>
		    		<br/>
		    		<%= f.label :phone_number, "Phone number" %>
		    		<br/>
	      			<%= f.text_field :phone_number %>
	      			<br/>
		    		<%= f.submit "Save info", class: "btn btn-primary" %>
		    	<% end %>
	  		</div>
		</div>
	</div>
<% end %>
